<?xml version="1.0" encoding="UTF-8"?>
<phpunit
  colors="true"
  bootstrap="./tests/bootstrap.php"
  processIsolation="false"
  >
  <php>
    <var name="DB_HOST" value="0.0.0.0" />
    <var name="DB_NAME" value="api" />
    <var name="DB_USER" value="api" />
    <var name="DB_PASS" value="api012" />
    <var name="DB_PORT" value="3306" />
    <var name="DB_CHARSET" value="utf8" />
  </php>

  <testsuites>
    <testsuite>
      <directory>./tests/lib/</directory>
    </testsuite>
  </testsuites>

  <filter>
    <whitelist addUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">./lib</directory>
      <exclude>
        <directory suffix="Interface.php">./lib</directory>
        <directory suffix="Skelton.php">./lib</directory>
      </exclude>
    </whitelist>
  </filter>

  <logging>
    <log type="coverage-html" target="./docs/reports" />
    <log type="coverage-clover" target="./logs/coverage.xml" />
  </logging>
</phpunit>
